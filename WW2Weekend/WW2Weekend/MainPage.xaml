<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WW2Weekend"
             x:Class="WW2Weekend.MainPage"
             NavigationPage.HasNavigationBar="false"
             BackgroundImage="poster1.jpg">
    

    <StackLayout VerticalOptions="End" Spacing="-3">
        <!-- Place new controls here -->
        <StackLayout Orientation="Horizontal" Spacing="-8"
            HeightRequest="80"
            Margin="-4">
            <Button Text="Map" 
                FontSize="18"
                Clicked="Map_Clicked" 
                HorizontalOptions="FillAndExpand"
                />
            <Button Text="Events"
                FontSize="18"
                Clicked="Events_Clicked"
                HorizontalOptions="FillAndExpand"   
                />
        </StackLayout>
        <Button Text="Donate"
            FontSize="25"
            Clicked="Donate_Clicked"
            HeightRequest="80"
            BackgroundColor="Firebrick"
            />
    </StackLayout>

</ContentPage>
